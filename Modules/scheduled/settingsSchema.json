{
  "id": "scheduled-settings",
  "version": "1.0.0",
  "name": "Scheduled Messages",
  "description": "Configure reminders and scheduled messages",
  "icon": "â°",
  "scope": "both",

  "sections": [
    {
      "id": "reminder",
      "name": "Reminders",
      "description": "Configure user reminder settings",
      "icon": "ðŸ””",
      "order": 1
    },
    {
      "id": "scheduled",
      "name": "Scheduled Messages",
      "description": "Configure scheduled message settings",
      "icon": "ðŸ“‹",
      "order": 2
    }
  ],

  "settings": {
    "reminder.maxDuration": {
      "type": "number",
      "default": 1440,
      "label": "Max Duration (minutes)",
      "description": "Maximum reminder duration (1440 = 24 hours)",
      "section": "reminder",
      "order": 1,
      "validation": { "min": 1, "max": 10080, "absoluteMin": 1 }
    },
    "reminder.maxPerUser": {
      "type": "number",
      "default": 1,
      "label": "Max Per User",
      "description": "Maximum active reminders per user (0 = unlimited)",
      "section": "reminder",
      "order": 2,
      "validation": { "min": 0, "max": 10 }
    },
    "reminder.bypassRoles": {
      "type": "multiRole",
      "default": [],
      "label": "Bypass Limit Roles",
      "description": "Roles that bypass reminder limits",
      "section": "reminder",
      "order": 3
    },
    "reminder.embedBehavior": {
      "type": "select",
      "default": "with_perms",
      "label": "Link Embed Behavior",
      "description": "When to show link previews in reminders",
      "section": "reminder",
      "order": 4,
      "options": [
        { "value": "never", "label": "Never show embeds" },
        { "value": "with_perms", "label": "Only if user has EmbedLinks permission" },
        { "value": "always", "label": "Always show embeds" }
      ]
    },
    "reminder.confirmMessage": {
      "type": "string",
      "default": "â° Got it! I'll remind you {time}",
      "label": "Confirmation Message",
      "description": "Message when reminder is set. Variables: {time}",
      "section": "reminder",
      "order": 5,
      "validation": { "required": true, "maxLength": 200 }
    },
    "reminder.reminderMessage": {
      "type": "string",
      "default": "{ping} Reminder!\n> {message}",
      "label": "Reminder Message",
      "description": "Delivered reminder. Variables: {ping}, {message}",
      "section": "reminder",
      "order": 6,
      "validation": { "required": true, "maxLength": 500 }
    },
    "reminder.footer": {
      "type": "string",
      "default": "-# *This message was generated by the user using `/reminder`*",
      "label": "Reminder Footer",
      "description": "Footer appended to reminders",
      "section": "reminder",
      "order": 7,
      "validation": { "maxLength": 200 }
    },
    "scheduled.maxGroups": {
      "type": "number",
      "default": 10,
      "label": "Max Groups",
      "description": "Maximum scheduled message groups",
      "section": "scheduled",
      "order": 1,
      "validation": { "min": 1, "max": 50, "absoluteMin": 1 }
    },
    "scheduled.maxMessagesPerGroup": {
      "type": "number",
      "default": 100,
      "label": "Max Messages Per Group",
      "description": "Maximum messages in a single group",
      "section": "scheduled",
      "order": 2,
      "validation": { "min": 1, "max": 500, "absoluteMin": 1 }
    },
    "scheduled.randomPercent": {
      "type": "number",
      "default": 30,
      "label": "Random Pool %",
      "description": "For random mode, select from oldest X% of messages (0 = always oldest)",
      "section": "scheduled",
      "order": 3,
      "validation": { "min": 0, "max": 100 }
    },
    "scheduled.defaultAutoPin": {
      "type": "boolean",
      "default": false,
      "label": "Auto-Pin by Default",
      "description": "New groups will have auto-pin enabled by default",
      "section": "scheduled",
      "order": 4
    }
  }
}
